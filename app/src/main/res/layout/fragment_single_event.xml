<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"

    tools:context=".fragments.SingleEventFragment">


    <ImageView
        android:id="@+id/singleEventViewImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/backgrounds/scenic" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@color/gold"
            android:orientation="vertical">
            <TextView
                android:id="@+id/singleEventViewEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="@dimen/_30sdp"/>
            <TextView
                android:id="@+id/singleEventViewDescription"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Shihan mihiranga | supun perera gunathilaka sanuka wickrama singhe Music by sarith surith- contact sandun +9477 6348896"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/red"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue"
                android:textSize="20dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/singleEventViewEventLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Samanala Ground - Galle"
                    android:textSize="15dp"/>
                <ImageView
                    android:id="@+id/locationIconForView"
                    android:layout_width="match_parent"
                    android:layout_marginStart="5dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location_icon" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_marginTop="6dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/singleEventViewEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07 dec 2023"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginTop="6dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/singleEventViewEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:00 PM"
                android:textSize="15dp"/>
            <Button
                android:id="@+id/btnBuyNow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Buy Now"/>


        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventSingleViewrecyclerView"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="200dp"
        android:orientation="horizontal"
        />
</LinearLayout>